        <div class="form-group">
          <%= f.text_field :title, placeholder: "Titulo", class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.text_area :description, placeholder:"DescrpciÃ³n", class:"form-control", rows:"5" %>
